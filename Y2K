    <script>

        function showEmoji(img) {
            img.style.display = "none"; // ì´ë¯¸ì§€ ìˆ¨ê¹€
            img.nextElementSibling.style.display = "block"; // ì´ëª¨ì§€ í‘œì‹œ
        }

        // íŒì—… ì°½ ê¸°ëŠ¥
        function showPopup() {
            alert("Welcome to the Y2K nostalgia trip!");
        }

        // ë°©ë¬¸ì ì¹´ìš´í„° ë™ì  ì¦ê°€
        let counter = 1024;  // ì´ˆê¸° ë°©ë¬¸ì ìˆ˜
        function incrementCounter() {
            const visitorCounter = document.getElementById('visitor-counter');
            setInterval(() => {
                counter++;
                visitorCounter.textContent = counter;
            }, 2000);
        }
        incrementCounter();

        // ë°©ëª…ë¡ ì²˜ë¦¬
        const form = document.getElementById('guestbook-form');
        const entriesList = document.getElementById('entries-list');

        form.addEventListener('submit', (e) => {
            e.preventDefault();
            const name = document.getElementById('name').value;
            const message = document.getElementById('message').value;

            if (name && message) {
                const entry = document.createElement('li');
                entry.textContent = `${name}: ${message}`;
                entriesList.appendChild(entry);
                
                form.reset();
            }
        });
        window.onload = function() {
            // ëª¨ë“  ë‚˜ë¹„ ì´ëª¨ì§€ ì„ íƒ
            const emojis = document.querySelectorAll('.emoji-placeholder');
            
            // ë‚˜ë¹„ë§ˆë‹¤ ë‹¤ë¥¸ ì†ë„ì™€ ì• ë‹ˆë©”ì´ì…˜ ì‹œì‘ ìœ„ì¹˜ë¥¼ í• ë‹¹
            emojis.forEach(emoji => {
                const randomDuration = Math.random() * 5 + 3; // 3ì´ˆì—ì„œ 8ì´ˆ ì‚¬ì´ì˜ ëœë¤ ì†ë„
                const randomDelay = Math.random() * 5; // 0ì´ˆì—ì„œ 5ì´ˆ ì‚¬ì´ì˜ ëœë¤ ì§€ì—°
                const randomScale = Math.random() * 0.5 + 0.75; // ëœë¤ í¬ê¸° (75%~125%)
                
                // ìŠ¤íƒ€ì¼ì— ì• ë‹ˆë©”ì´ì…˜ ì¶”ê°€
                emoji.style.animation = `randomMove ${randomDuration}s ease-in-out ${randomDelay}s infinite`;
                emoji.style.transform = `scale(${randomScale})`; // í¬ê¸° ë³€ê²½
            });
        };
        
    </script>
